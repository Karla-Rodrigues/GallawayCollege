@model Course
@{
    ViewData["Title"] = "CCourse";
}
<h1> Add Course </h1>

<form method="post" asp-action="CCourse">

    <div asp-validation-summary="All" class="alert" style="position: absolute; left: 52px; top: 65px">

        @Html.Partial("CourseSummary")

    </div>

    <div style="position: absolute; left: 589px; top: 286px">

        <input type="hidden" asp-for="CourseCode" />
        <input type="hidden" asp-for="CourseName" />
        <input type="hidden" asp-for="CourseDesc" />
        <input type="hidden" asp-for="CourseFaculty" />

        <button class="button" asp-action="CCourse" asp-controller="Course" type="submit" tabindex="7">
            Registrate
        </button>
        <button class="button" asp-action="Course" asp-controller="Course" type="submit" tabindex="9">
            Cancel
        </button>
    </div>

</form>